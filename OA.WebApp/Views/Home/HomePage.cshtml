
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>HomePage</title>
    <link href="~/Content/themes/default/easyui.css" rel="stylesheet" />
    <link href="~/Content/themes/icon.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.12.4.min.js"></script>
    <script src="~/Scripts/jquery.easyui-1.4.5.min.js"></script>
    <style>
        .txt {
            font-size: 20px;
            font-weight: bold;
            color: blue;
            margin-left: 40px;
            margin-top: 20px;
            float: left;
        }
    </style>
    <script>
        $(function () {
            bindClickEvent();
        });
        function bindClickEvent() {
            $(".detailLink").click(function () {
                var title = $(this).text();
                var url = $(this).attr("url");
                var isExist = $("#tt").tabs("exists", title);
                if (isExist) {
                    $("#tt").tabs("select", title);
                    return;
                }
                $("#tt").tabs("add", {
                    title: title,
                    content: showContent(url),
                    closable: true
                });
            })
        }
        function showContent(url) {
            var str = '<iframe src="' + url + '" width="100 % " height="100 % " frameborder="0"></iframe>';
            return str;
        }
    </script>
</head>
<body class="easyui-layout">
    <div data-options="region:'north',borther:false"
         style="height:78px;padding:10px;overflow:hidden;background-image:url('/Content/Images/bg3.png')">
        <img src="~/Content/Images/XT.png" style="float:left" />
        <span class="txt">OA by XT</span>
    </div>
    <div data-options="region:'west',split:true,title:'west'"
         style="width:150px;padding:1px;">
        <div class="easyui-accordion" style="width:auto;height:auto;">
            <div title="用户管理" data-options="iconCls:'icon-ok'" style="overflow:auto;padding:1px;">
                <a href="javascript:void(0)" class="detailLink" url="/UserInfo/Index">用户管理</a>
            </div>
            <div title="角色管理" data-options="iconCls:'icon-help'" style="padding:1px;">
                <a href="javascript:void(0)" class="detailLink" url="/RoleInfo/Index">角色管理</a>
            </div>
        </div>
    </div>
    @*<div data-options="region:'east',split:true,collapsed:true,title:'East'"
             style="width:100px;padding:10px;">
            East region
        </div>*@
    <div data-options="region:'south',border:false"
         style="height:50px;background:#A9FACD;padding:10px;">
        South region
    </div>
    <div data-options="region:'center',title:'Center'">
        <div id="tt" class="easyui-tabs" style="width:700px;height:250px" fit="true">
            <div title="用户管理" style="padding:10px;">
                <iframe src="/UserInfo/Index" width="100%" height="100%" frameborder="0"></iframe>
            </div>
        </div>
    </div>
</body>
</html>
